<%- include('../layouts/header'); -%>



<div class="col-md-6 mx-auto p-5">
    <div class="card">
        <div class="card-header">
            <h3>Editar Nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit/<%= nota._id %>?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" value="<%= nota.title %>"> 
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control"><%= nota.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-info btn-block" type="submit">
                        Enviar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>



<%- include('../layouts/footer'); -%>